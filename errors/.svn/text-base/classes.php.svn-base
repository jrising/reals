<?php

// Taxonomy of errors for the errors.php system

// Keep in mind that an error class is said to be a component of
// another error class if (SUPER & BASEC) = BASEC

// Basic Error Classes
define('EC_COMMENT', 0x0);   // not an error, but a message in the error system
define('EC_USER', 0x1);      // a user error
define('EC_SYSTEM', 0x2);    // an internal system error
define('EC_REALS', 0x4);     // an error for the reals system
define('EC_UNKNOWN', 0x8);   // unknown source
define('EC_COMMUNICATION', 0x10); // error sending or receiving data
define('EC_ARGUMENT', 0x20); // error with a function argument
define('EC_TESTING', 0x40);  // error associated with a test
define('EC_UNCLASSIFIED', 0x80); // unknown type of error

// Reals Errors
define('EC_REALS_HTML', 0x14);
define('EC_REALS_DATABASE', 0x24);
define('EC_REALS_FORMS', 0x44);

?>